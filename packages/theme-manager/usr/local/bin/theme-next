#!/bin/bash
# Cycles to the next available theme.

set -e

THEMES_DIR="${XDG_CONFIG_HOME:-$HOME/.config}/themes/"
CURRENT_THEME_LINK="${XDG_CONFIG_HOME:-$HOME/.config}/current/theme"

# Find all theme directories
THEMES=($(find "$THEMES_DIR" -mindepth 1 -maxdepth 1 | sort))
TOTAL=${#THEMES[@]}

if [[ $TOTAL -eq 0 ]]; then
  echo "No themes found in $THEMES_DIR" >&2
  exit 1
fi

# Get current theme from symlink
if [[ -L "$CURRENT_THEME_LINK" ]]; then
  CURRENT_THEME=$(realpath "$CURRENT_THEME_LINK")
else
  # Default to first theme if no symlink exists
  CURRENT_THEME=$(realpath "${THEMES[0]}")
fi

# Find current theme index
INDEX=0
for i in "${!THEMES[@]}"; do
  THEMES[$i]=$(realpath "${THEMES[$i]}")
  if [[ "${THEMES[$i]}" == "$CURRENT_THEME" ]]; then
    INDEX=$i
    break
  fi
done

# Get next theme (wrap around)
NEXT_INDEX=$(((INDEX + 1) % TOTAL))
NEW_THEME=${THEMES[$NEXT_INDEX]}
NEW_THEME_NAME=$(basename "$NEW_THEME")

# Set the new theme
"$(dirname "$0")/theme-set" "$NEW_THEME_NAME"

# Notify user of the change
swaync-client -n -t notification -ID 98 -d "Theme Changed" -s "Switched to $NEW_THEME_NAME"
