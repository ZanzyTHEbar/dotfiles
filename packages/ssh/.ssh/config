# Global SSH Configuration for All Machines
# This configuration will be used across all machines in the setup
# Sensitive information is managed via SOPS secrets

# GitHub Personal Account
Host github-personal
	HostName github.com
	User git
	IdentityFile ~/.ssh/spacedragon
	IdentitiesOnly yes

# GitHub Work Account
Host github-work
	HostName github.com
	User git
	IdentityFile ~/.ssh/emissium
	IdentitiesOnly yes

# Emissium API Server
Host emissium-api
	HostName @EMISSIUM_API_IP@
	User emissium
	IdentityFile ~/.ssh/emissium
	IdentitiesOnly yes

# Emissium Coolify Server
Host emissium-coolify
	HostName @EMISSIUM_COOLIFY_IP@
	User emissium
	IdentityFile ~/.ssh/emissium
	IdentitiesOnly yes

# Emissium Staging Server
Host emissium-staging
	HostName @EMISSIUM_STAGING_IP@
	User emissium
	IdentityFile ~/.ssh/emissium
	IdentitiesOnly yes

# Global SSH Settings
Host *
	StrictHostKeyChecking no
	UserKnownHostsFile /dev/null
	LogLevel ERROR 